<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.facebook.user.dao.UserDAO">
 	<!-- 중복확인 select -->
 	<select id="existLoginId" parameterType="String" resultType="boolean">
 		SELECT 
 			COUNT(*)
 		FROM
 		 	`user`
 		 WHERE
 		 	`loginId` = #{loginId}
 	</select>
 	
 	<!-- 회원가입 insert -->
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`loginId`
			,`password`
			,`name`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			, #{password}
 			, #{name}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<!-- 로그인 select -->
 	<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.facebook.user.model.User">
 		SELECT 
 			`id`
 			,`loginId`
			,`password`
			,`name`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
		AND 
			`password` = #{password}
 	</select>
 </mapper>
 
